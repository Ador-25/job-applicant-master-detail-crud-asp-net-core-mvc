@model ResumeManager.Models.Resume

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Resume</h4>
<hr />
<div class="row">
            <div class="col-md-9">
                <form asp-action="Create" class="row g-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                      <div class="col-md-5">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
          <div class="col-md-2">
            <label asp-for="Gender" class="form-label"></label>
             <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Genders>()"> 
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
          </div>

            <div class="form-group col-md-2">
                <label asp-for="Age" class="form-label "></label>
                <input asp-for="Age" class="form-control " />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group w-50">
                <label asp-for="Qualification" class="control-label "></label>
                <input asp-for="Qualification" class="form-control" />
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2 w-25">
                <label asp-for="TotalExperience" class="control-label"></label>
                <input asp-for="TotalExperience" class="form-control" />
                <span asp-validation-for="TotalExperience" class="text-danger"></span>
            </div>
            <div class="form-group col-md-1 w-50">
                <label asp-for="PhotoUrl" class="control-label"></label>
                <input asp-for="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>

            <div class="col-md-9">
                <table id="ExpTable" class="table table-striped table-sm">
                <thead>
                <tr>
                    <td>
                        Company Name
                    </td>
                    <td>
                        Designation
                    </td>
                    <td>
                        Years
                    </td>
                    <td>

                    </td>
                </tr>
            </thead>
            <tbody>
                        @for(int i = 0; i < @Model.Experiences.Count; i++)
                        {
                            <tr>

                                <td>
                                    <input asp-for="@Model.Experiences[i].CompanyName" class="form-control"/>
                                </td>
                                <td>
                                    <input asp-for="@Model.Experiences[i].Designation" class="form-control"/>
                                </td>
                                <td>
                                    <input asp-for="@Model.Experiences[i].YearsWorked" class="form-control"/>
                                </td>
                                <td>
                                    <button class="btn-success">
                                        ADD
                                    </button>
                                </td>
                            </tr>
                        }
            </tbody>

                </table>
                

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
